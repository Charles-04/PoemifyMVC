@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@model Poemify.BLL.Models.CreateAndUpdatePoemViewModel

<form class="col-7" asp-controller="Poem" asp-action="Save">
 <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label"></label>
        <input class="form-control" asp-for="@Model.Title">
        <span asp-validation-for="Title"></span>
    </div>
<div class="form-floating col-3">
    <textarea class="form-control" placeholder="Write Your Thoughts" id="@Model.Body"></textarea>
    <label for="@Model.Body">Body</label>
</div>
</form>
